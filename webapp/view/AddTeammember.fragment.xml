<core:FragmentDefinition xmlns:core="sap.ui.core" controllerName="com.sap.build.standard.flexsoOpdrachtMockUpFinal.controller.AddTeammember" xmlns="sap.m">
    <Dialog horizontalScrolling="true" showHeader="true" state="None" stretch="false" title="Add Team member" type="Standard" verticalScrolling="true">
        <content>
            <List mode="None" width="370px" headerText="Project members" footerText="" backgroundDesign="Solid" showSeparators="All" growing="true" growingThreshold="20" growingScrollToLoad="true" class="sapUiSmallMargin">
                <infoToolbar/>
                <headerToolbar/>
                <items>
                    <InputListItem label="Name" visible="true">
                        <content>
                            <ComboBox 
                            items="{
													path: '/empSet',
													sorter: {
														path: 'FirstName',
														descending: false
														}
													}"
                            editable="true" enabled="true" visible="true" width="177.42857360839844px" valueState="None" maxWidth="100%">
                                <items>
                                    <core:Item text="{FirstName} {LastName}" enabled="true" key="Item 1"/>
                                </items>
                            </ComboBox>
                        </content>
                    </InputListItem>
                    <InputListItem label="Role" visible="true">
                        <content>
                            <Input placeholder="Role" type="Text" showValueHelp="false" enabled="true" visible="true" width="auto" valueHelpOnly="false" maxLength="0"/>
                        </content>
                    </InputListItem>
                </items>
            </List>
        </content>
        <beginButton/>
        <buttons>
            <Button text="OK" type="Accept" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="_onButtonPress"/>
            <Button text="Cancel" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="_onButtonPress1"/>
        </buttons>
        <customHeader/>
        <endButton/>
        <subHeader/>
    </Dialog>
</core:FragmentDefinition>
